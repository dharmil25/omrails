<div class="container">
  <p>
    <strong>User:</strong>
    <%= link_to @tweet.user.username, user_path(@tweet.user.username) %>
  </p>

  <%= link_to @tweet.image.url do %>
    <%= image_tag @tweet.image.url(:medium), class: "thumbnail" %>
  <% end %>

  <p>
    <strong>Content:</strong>
    <%= @tweet.content %>
  </p>
  <% if @tweet.user == current_user %>
    <%= link_to 'Edit', edit_tweet_path(@tweet) %> |
    <%= link_to 'Delete', @tweet, method: :delete %> |
  <% end %>
  <%= link_to 'Back', tweets_path %>
</div>